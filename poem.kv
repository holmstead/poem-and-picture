<Label>
    #padding: 20, 20
    font_size: 24
    font_name: 'fonts/ComicNeue-BoldItalic'
    # Text properties
    color: (0,0,0,1)
    halign: 'center'
    text_size: self.width, None
    size_hint_y: None
    height: self.texture_size[1]

<BoxLayout>
    orientation: 'vertical'

<MyLayout>:
	BoxLayout:
 	
    	Image:
    		source: root.get_image()

	ScrollView:
    	size_hint_y: 0.9
    	pos_hint: {'x':0, 'y': .11}
    	do_scroll_x: False
    	do_scroll_y: True
    	
    	GridLayout:
    		size:(root.width, root.height)
    		size_hint_x: None
    		size_hint_y: None
    		cols: 1
    		height: self.minimum_height

            Label:
                id: title
                font_size: 30
            	text: root.get_title() 

        	Label:
            	id: poem
                halign: 'center'
            	text: root.get_text()

            Label:
                id: author
                font_size: 20
                text: root.get_author()
